</head>

<body>
  <div class="camera-container" style="position: fixed" style="display:none;">

      <video src="" class="camera-canvas" id="video" autoplay playsinline></video>
      <canvas class="image-canvas" id="imageCanvas"></canvas>
  </div>

  <div class="input_cover" style="display:none;">

  </div>

  <div class="title_ground">
    <div class="title_text">
      <div class="title_backicon">
        <i class="fas fa-chevron-left"></i>
      </div>
      <div class="t_text_main" id="textMain">
        New IoTIZER
      </div>
      <div class="t_text_sub" id="textSub">
        Take photo according to the guide
      </div>
    </div>
  </div>

  <div class="guideline" id="guidelineImage">
    <div class="guideline_img" style="background-image: url(./images/guideline.png); background-size: contain; background-repeat: no-repeat; background-position: center;"></div>

    <div class="get_powerUID" style="display: none;">
      <div class="textbox">
        <label for="input">Device Name</label>
        <input type="text" id="input_">
      </div>

      <div class="textbox2">
        <label for="input">Power UID</label>
        <input type="text" id="input2_">
      </div>

      <div class="input_btns">
        <div class="cancle" id="cancle">
          Cancle
        </div>
        <div class="complete" id="complete">
          Complete
        </div>
      </div>
    </div>
  </div>

  <div class="btn_bottom">
    <div class="btn_beforeP">
      <div class="btns" style="background-image: url(./images/cameraIcon.png); background-size: cover;">
      </div>
    </div>

    <div class="btn_afterP left" style="display:none;">
      <div class="btns" style="background-image: url(./images/refreshIcon.png); background-size: cover;">
      </div>
    </div>
    <div class="btn_afterP right" id="takeImage" style="display:none;">
      <div class="btns" style="background-image: url(./images/completeIcon.png); background-size: cover;">
      </div>
    </div>
  </div>



