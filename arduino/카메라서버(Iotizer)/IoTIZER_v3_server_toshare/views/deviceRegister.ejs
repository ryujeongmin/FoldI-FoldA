      var activeTab = sessionStorage.getItem('activeTab');

      $(document).ready(function() {
        let viewheight = $(window).height();
        let viewwidth = $(window).width();
        let viewport = document.querySelector("meta[name=viewport]");
        viewport.setAttribute("content", "height=" + viewheight + "px, width=" + viewwidth + "px, initial-scale=1.0");
        $('.camera-container').css('width', $(window).width());
        $('.camera-container').css('height', $(window).height());
        $('.camera-canvas').css('width', $(window).width());
        $('.camera-canvas').css('height', $(window).height());
        $('.image-canvas').css('width', $(window).width());
        $('.image-canvas').css('height', $(window).height());
      });

    </script>
